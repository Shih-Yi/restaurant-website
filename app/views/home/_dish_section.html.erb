<!-- Entree Section -->
<div class="menu-section-title"><%= dish_type.first.dish_type %>
</div>
<div class="menu-section-title-after"></div>

<div class="row">
  <div class="col-xs-12 col-sm-6">
    <div class="menu-section">
      <div class="size-item">
        <div class="row">
          <div class="col-8">
          </div>
          <div class="col-2">
            <span class="menu-item-price">Small</span>
          </div>
          <div class="col-2">
            <span class="menu-item-price">Large</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if dish_type.size > 1 %>
    <div class="col-xs-12 col-sm-6 mobile-hide">
      <div class="menu-section">
        <div class="size-item">
          <div class="row">
            <div class="col-8">
            </div>
            <div class="col-2">
              <span class="menu-item-price">Small</span>
            </div>
            <div class="col-2">
              <span class="menu-item-price">Large</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<!-- Entree Dishes -->
<div class="row">
  <% dish_type.each.with_index do |dish, index| %>
    <% if (index+1).odd? %>
      <div class="col-xs-12 col-sm-6">
        <div class="menu-section">
          <div class="menu-item">
            <div class="row menu-item-name-price">
              <div class="col-8">
                <span class="menu-item-name"><%= dish.english_name %></span>
              </div>
              <div class="col-2">
                <span class="menu-item-price">$<%= dish.small_price %></span>
              </div>
              <div class="col-2">
                <span class="menu-item-price">$<%= dish.large_price %></span>
              </div>
            </div>
            <div>
              <div class="menu-item-description"><%= dish.chinese_name %></div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="col-xs-12 col-sm-6">
        <div class="menu-section">
          <div class="menu-item">
            <div class="row menu-item-name-price">
              <div class="col-8">
                <span class="menu-item-name"><%= dish.english_name %></span>
              </div>
              <div class="col-2">
                <span class="menu-item-price">$<%= dish.small_price %></span>
              </div>
              <div class="col-2">
                <span class="menu-item-price">$<%= dish.large_price %></span>
              </div>
            </div>
            <div>
              <div class="menu-item-description"><%= dish.chinese_name %></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
