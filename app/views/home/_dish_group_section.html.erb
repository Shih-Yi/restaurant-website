<% if group_data[:dishes].present? %>

    <h3 class="menu-section-title"><%= group_data[:name] %> <%= Dish::TYPE[group_data[:group_type]] %></h3>
    <div class="menu-section-title-after"></div>

      <!-- size -->
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="menu-section">
        <div class="size-item">
          <div class="row">
            <div class="col-8">
            </div>
            <div class="col-2">
              <span class="menu-item-price">Small</span>
            </div>
            <div class="col-2">
              <span class="menu-item-price">Large</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% if group_data[:dishes].size > 1 %>
      <div class="col-xs-12 col-sm-6 mobile-hide">
        <div class="menu-section">
          <div class="size-item">
            <div class="row">
              <div class="col-8">
              </div>
              <div class="col-2">
                <span class="menu-item-price">Small</span>
              </div>
              <div class="col-2">
                <span class="menu-item-price">Large</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

    <!-- Dishes -->
  <div class="row mb-3">
    <% group_data[:dishes].each.with_index do |dish, index| %>
      <% if (index+1).odd? %>
        <div class="col-xs-12 col-sm-6">
          <div class="menu-section">
            <div class="menu-item">
              <div class="row menu-item-name-price">
                <div class="col-8">
                  <span class="menu-item-name"><%= dish.english_name.html_safe %></span>
                </div>
                <div class="col-2">
                  <span class="menu-item-price"><%= dish.small_price.present? ? '$' + dish.small_price.to_s : 'N/A' %></span>
                </div>
                <div class="col-2">
                  <span class="menu-item-price"><%= dish.large_price.present? ? '$' + dish.large_price.to_s : 'N/A' %></span>
                </div>
              </div>
              <div>
                <div class="menu-item-description"><%= dish.chinese_name.html_safe %></div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="col-xs-12 col-sm-6">
          <div class="menu-section">
            <div class="menu-item">
              <div class="row menu-item-name-price">
                <div class="col-8">
                  <span class="menu-item-name"><%= dish.english_name.html_safe %></span>
                </div>
                <div class="col-2">
                  <span class="menu-item-price"><%= dish.small_price.present? ? '$' + dish.small_price.to_s : 'N/A' %></span>
                </div>
                <div class="col-2">
                  <span class="menu-item-price"><%= dish.large_price.present? ? '$' + dish.large_price.to_s : 'N/A' %></span>
                </div>
              </div>
              <div>
                <div class="menu-item-description"><%= dish.chinese_name.html_safe %></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

<% end %> 