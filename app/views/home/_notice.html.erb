<script>
  let published_and_active = "<%= raw(@notice_published_active) %>"
  if (published_and_active == 'true') {
    let title = "<%= raw(@notice && @notice.title) %>"
    let text = "<%=j simple_format(@notice && @notice.text) %>"
    Swal.fire({
      icon: 'info',
      title: title,
      html: "<h4>" + text + "<h4>",
      showCloseButton: true,
      showConfirmButton: false,
        footer: '  ',
    })
  }
</script>
