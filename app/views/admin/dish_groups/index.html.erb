<div class="content-wrapper px-2 py-2">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Dish Groups</h1>
          </div>
          <div class="col-sm-3">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="<%= admin_root_path %>">Home</a></li>
              <li class="breadcrumb-item active">Dish Groups</li>
            </ol>
          </div>
          <div class="col-sm-3">
            <%= link_to 'Create Dish', new_admin_dish_path, class: "btn btn-block btn-outline-success" %>
          </div>
        </div>

      </div><!-- /.container-fluid -->
    </section>
        <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <!-- /.card -->
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
              <table class="table table-condensed">
                <thead>
                  <tr>
                    <th style="width: 10px">#</th>
                    <th>Type</th>
                    <th>Images</th>
                    <th>Settings</th>
                  </tr>
                </thead>
                <tbody>
                      <% @dish_groups.each_with_index do |dish_group, index| %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= dish_group.group_type %></td>
                          <td><%= dish_group.dish_group_images.count %></td>
              
                          <td>
                            <%= link_to "編輯", edit_admin_dish_group_path(dish_group), class: "btn btn-sm btn-info" %>
                            <!-- <%= link_to "刪除", admin_dish_group_path(dish_group), method: :delete, data: { confirm: "確定要刪除嗎？" }, class: "btn btn-sm btn-danger" %> -->
                          </td>
                        </tr>
                      <% end %>
                      </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
