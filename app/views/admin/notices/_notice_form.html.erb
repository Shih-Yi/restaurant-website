<div class="content-wrapper px-4 py-2">
  <div class="main-content" style="min-height: 616px;">
    <section class="section">
      <div class="section-header">
        <h2>Form</h2>
      </div>

      <div class="section-body">
        <h2 class="section-title"></h2>
        <p class="section-lead"></p>

        <div class="row">
        <%= form_for @notice, url: admin_notice_path, html: { class: "col-12 col-md-6 col-lg-6" } do |f| %>
            <form role="form">
              <div class="card-body">
                <div class="form-group">
                  <%= label_tag("title") %>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag("start at") %>
                  <%= f.datetime_local_field :start_at, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag("end at") %>
                  <%= f.datetime_field :end_at, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag("text") %>
                  <%= f.text_area :text, rows: 10, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag("published") %>
                  <%= f.check_box :published, class: "form-control" %>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <%= f.submit "submit", class: "btn btn-primary" %>
              </div>
            </form>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
