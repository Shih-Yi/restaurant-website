<div class="content-wrapper px-4 py-2">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Notice</h1>
        </div>
        <div class="col-sm-3">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="<%= admin_root_path %>">Home</a></li>
            <li class="breadcrumb-item active">Notice</li>
          </ol>
        </div>
        <% if @notice.nil? %>
          <div class="col-sm-3">
            <%= link_to 'Create Reservation', new_admin_notice_path, class: "btn btn-block btn-outline-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <div class="card">
    <% if @notice.present? %>
      <div class="card-header">
        <label for="title">Title:</label>
        <%= @notice.title %>
      </div>
      <div class="card-body">
        <label for="start_at">Start At:</label>
        <p class="card-text"><%= @notice.start_at %></p>
      </div>
      <div class="card-body">
        <label for="end_at">End At:</label>
        <p class="card-text"><%= @notice.end_at %></p>
      </div>
      <div class="card-body">
        <label for="Text">Text:</label>
        <p class="card-text"><%= @notice.text %></p>
      </div>
      <div class="card-body">
        <label for="Text">Published:</label>
        <p class="card-text"><%= @notice.published? ? 'Published' : 'Unpublished' %></p>
      </div>
      <div class="card-footer">
        <label for="Edit">Edit:</label>
        <%= link_to edit_admin_notice_path do %>
          <i class="far fa-edit fa-2x"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
