<div class="content-wrapper px-4 py-2">
  <!-- Content Header -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-4">
        <div class="col-sm-6">
          <h1 class="mb-0">Notice Management</h1>
          <p class="text-muted mt-1">View and manage website notifications</p>
        </div>
        <div class="col-sm-6">
          <div class="d-flex justify-content-end">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="<%= admin_root_path %>">Dashboard</a></li>
              <li class="breadcrumb-item active">Notice</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8">
          <% if @notice.present? %>
            <div class="card">
              <div class="card-header bg-light">
                <h3 class="card-title mb-0"><i class="fas fa-bullhorn mr-2 text-primary"></i> <%= @notice.title %></h3>
                <div class="float-right">
                  <span class="badge <%= @notice.published? ? 'badge-success' : 'badge-secondary' %>">
                    <%= @notice.published? ? 'Published' : 'Draft' %>
                  </span>
                </div>
              </div>
              <div class="card-body">
                <div class="row mb-4">
                  <div class="col-md-6">
                    <div class="info-box bg-light">
                      <div class="info-box-content">
                        <span class="info-box-text text-muted"><i class="far fa-calendar-alt mr-1"></i> Start Date</span>
                        <span class="info-box-number"><%= @notice.start_at.strftime("%B %d, %Y at %I:%M %p") %></span>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="info-box bg-light">
                      <div class="info-box-content">
                        <span class="info-box-text text-muted"><i class="far fa-calendar-check mr-1"></i> End Date</span>
                        <span class="info-box-number"><%= @notice.end_at.strftime("%B %d, %Y at %I:%M %p") %></span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="notice-content px-3 py-3 bg-light rounded">
                  <h6 class="text-muted mb-3">NOTICE CONTENT</h6>
                  <p class="mb-0"><%= simple_format(@notice.text) %></p>
                </div>
              </div>
              <div class="card-footer bg-white">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <small class="text-muted">
                      <% if @notice.published? %>
                        <i class="fas fa-globe mr-1"></i> Visible to users from 
                        <%= @notice.start_at.strftime("%b %d") %> to <%= @notice.end_at.strftime("%b %d") %>
                      <% else %>
                        <i class="fas fa-eye-slash mr-1"></i> This notice is not published
                      <% end %>
                    </small>
                  </div>
                  <div>
                    <%= link_to edit_admin_notice_path, class: "btn btn-primary" do %>
                      <i class="far fa-edit mr-1"></i> Edit
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <div class="card">
              <div class="card-body text-center py-5">
                <div class="empty-state">
                  <i class="fas fa-bullhorn fa-4x text-muted mb-3"></i>
                  <h4>No Notice Found</h4>
                  <p class="lead">You haven't created any notice yet.</p>
                  <%= link_to new_admin_notice_path, class: "btn btn-primary mt-3" do %>
                    <i class="fas fa-plus mr-1"></i> Create New Notice
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </section>
</div>
