<div class="content-wrapper px-4 py-2">
  <div class="main-content">
    <section class="section">
      <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h2><%= @dish.new_record? ? "Create Dish" : "Edit Dish" %></h2>
      </div>

      <div class="section-body">
        <div class="row">
          <div class="col-12 col-md-8">
            <div class="card">
              <div class="card-header">
                <h4>Dish Details</h4>
              </div>
              
              <%= form_for [:admin, @dish], html: { class: "needs-validation" } do |f| %>
                <div class="card-body">
                  <div class="form-group">
                    <%= f.label :dish_group_id, "Dish Group", class: "font-weight-bold" %>
                    <%= f.collection_select :dish_group_id, @dish_groups, :id, :name, 
                      { include_blank: "-- choose dish group --" }, 
                      { class: "custom-select form-control", required: true } %>
                  </div>
                  
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :english_name, "English Name", class: "font-weight-bold" %>
                        <%= f.text_area :english_name, class: "form-control", placeholder: "Enter dish name in English", required: true, rows: 2 %>
                      </div>
                    </div>
                    
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :chinese_name, "Chinese Name", class: "font-weight-bold" %>
                        <%= f.text_area :chinese_name, class: "form-control", placeholder: "Enter dish name in Chinese", rows: 2 %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :small_price, "Price (Small)", class: "font-weight-bold" %>
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                          </div>
                          <%= f.text_field :small_price, class: "form-control", placeholder: "0.00" %>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :large_price, "Price (Large)", class: "font-weight-bold" %>
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                          </div>
                          <%= f.text_field :large_price, class: "form-control", placeholder: "0.00" %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="card-footer text-right">
                  <%= link_to "Cancel", admin_dishes_path, class: "btn btn-secondary mr-2" %>
                  <%= f.submit @dish.new_record? ? "Create Dish" : "Update Dish", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </section>
  </div>
</div>
