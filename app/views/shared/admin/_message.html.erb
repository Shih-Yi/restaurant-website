<% unless flash.empty? %>
  <script type="text/javascript">
    <% flash.each do |key, value| %>
    <% type = key.to_s.gsub('alert','error').gsub('notice','success') %>
    $(document).Toasts('create', {
      delay: 5000,
      autohide: true,
      class: 'bg-<%= type %>',
      title: '<%= type %>',
      body: '<%= value %>',
    })
    <% end %>
  </script>
<% end %>
